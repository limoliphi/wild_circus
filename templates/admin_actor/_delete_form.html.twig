<form method="post" action="{{ path('actor_delete', {'id': actor.id}) }}" onsubmit="return confirm('Voulez-vous vraiment supprimer cet acteur ?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ actor.id) }}">
    <button class="mt-2 btn btn-danger">Supprimer</button>
</form>
