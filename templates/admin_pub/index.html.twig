{% extends 'base.html.twig' %}

{% block title %}Pub index{% endblock %}

{% block body %}
    <h1>Pub index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Content</th>
                <th>Reference</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for pub in pubs %}
            <tr>
                <td>{{ pub.id }}</td>
                <td>{{ pub.title }}</td>
                <td>{{ pub.content }}</td>
                <td>{{ pub.reference }}</td>
                <td>
                    <a href="{{ path('pub_show', {'id': pub.id}) }}">show</a>
                    <a href="{{ path('pub_edit', {'id': pub.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('pub_new') }}">Create new</a>
{% endblock %}
